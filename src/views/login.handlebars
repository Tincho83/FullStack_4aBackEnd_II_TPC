<div class="login-container">
    <div class="avatar">
        <img src="img/avatar.png" alt="Avatar">
    </div>
    <form class="login-form" id="loginForm">
        <div class="input-group">
            <label for="email"></label>
            <input type="text" id="email" name="email" placeholder="e-Mail" required>
        </div>
        <div class="input-group">
            <label for="password"><i class="fas fa-lock"></i></label>
            <input type="password" id="password" name="password" placeholder="Password" required>
        </div>
        <div class="remember-me">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember">Remember me</label>
            <a href="/reqresetpassword" class="forgot-password">Reset password?</a>
        </div>
        <button type="submit" id="login-btn" class="login-btn" value="SignUp User">Log In User</button>
        <p><br></p>
        <div>
            <a href="/api/sessions/github">
                <button id="logingithub-btn" class="login-btn">
                    Login with GitHub
                </button>
            </a>
        </div>
        <a href="/signup" class="forgot-password">Sign Up</a>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script defer src="js/login.js"></script>